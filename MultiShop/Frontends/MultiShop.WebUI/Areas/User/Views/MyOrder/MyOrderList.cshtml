@model List<ResultOrderingByUserIdDto>

@{
    ViewData["Title"] = "My Order List";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    var tableRowColors = new List<string> { "table-info", "table-warning", "table-danger", "table-success", "table-primary", "table-dark", "table-secondary" };
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişim</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Toplam Fiyat</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Sipariş Detayları</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        var item = Model[i];
                                        var rowColor = tableRowColors[i % tableRowColors.Count];
                                        <tr class="@rowColor">
                                            <th>@(i + 1)</th>
                                            <td>@item.TotalPrice</td>
                                            <td>@item.OrderDate.ToString("dd-MMM-yyyy")</td>
                                            <td><a href="#" class="btn btn-warning">Sipariş Detayları</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © MultiShop @DateTime.Now.Year</span>
                    <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">
                        Free
                        <a href="https://www.bootstrapdash.com/" target="_blank">MultiShop Kullanıcı Paneli</a> Tüm Hakları Saklıdır
                    </span>
                </div>
            </div>
        </div>
    </footer>
</div>