@model GetByIdCommentDto
@* @model UpdateCommentDto *@

@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="UserCommentID" />
                        <input type="hidden" asp-for="ProductID" />
                        <label>Kullanıcı Adı Soyadı</label>
                        <input type="text" class="from-control" asp-for="NameSurname" />
                        <br />
                        <label>Kullanıcı Görsel</label>
                        <input type="text" class="from-control" asp-for="ImageUrl" />
                        <br />
                        <label>Email Adresi</label>
                        <input type="text" class="from-control" asp-for="Email" />
                        <br />
                        <label>Kullanıcı Puanı</label>
                        <input type="number" class="from-control" asp-for="Rating" min="0" max="5" />
                        <br />
                        <label>Yorum Tarihi</label>
                        <input type="date" class="from-control" asp-for="CreatedDate" />
                        <br />
                        <label>Yorum</label>
                        <textarea asp-for="CommentDetail" class="form-control" rows="3"></textarea>
                        <br />
                        <button class="btn btn-success">Yorumu Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


