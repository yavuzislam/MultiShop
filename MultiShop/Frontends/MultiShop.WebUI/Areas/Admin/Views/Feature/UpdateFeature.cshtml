@model GetByIdFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Alan Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="FeatureID" />
                        <label> Öne Çıkanlar Başlığı</label>
                        <input type="text" class="from-control" asp-for="Title" />
                        <br />
                        <label> Öne Çıkan İkonu</label>
                        <input type="text" class="from-control" asp-for="Icon" />
                        <br />
                        <button class="btn-btn primary">Öne Çıkan Alanı Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>




