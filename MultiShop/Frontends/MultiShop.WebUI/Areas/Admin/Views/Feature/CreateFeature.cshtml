@model CreateFeatureDto

@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Alan Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label> Öne Çıkanlar Başlığı</label>
                        <input type="text" class="from-control" asp-for="Title" />
                        <br />
                        <label> Öne Çıkan İkonu</label>
                        <input type="text" class="from-control" asp-for="Icon" />
                        <br />
                        <button class="btn-btn primary">Öne Çıkan Alan Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>




