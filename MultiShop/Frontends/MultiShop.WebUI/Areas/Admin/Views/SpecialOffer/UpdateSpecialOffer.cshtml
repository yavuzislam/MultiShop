@model UpdateSpecialOfferDto

@{
    ViewData["Title"] = "UpdateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklif Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="SpecialOfferID" />
                        <label> Teklif Başlığı</label>
                        <input type="text" class="from-control" asp-for="Title" />
                        <br />
                        <label> Teklif Alt Başlığı</label>
                        <input type="text" class="from-control" asp-for="SubTitle" />
                        <br />
                        <label> Teklif Görseli</label>
                        <input type="text" class="from-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn-btn success">Özel Teklifi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


