@model UpdateFeatureSliderDto

@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Slider Görsel Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="FeatureSliderID" />
                        <label> Görsel Başlığı</label>
                        <input type="text" class="from-control" asp-for="Title" />
                        <br />
                        <label> Görsel Açıklaması</label>
                        <input type="text" class="from-control" asp-for="Description" />
                        <br />
                        <label> Görsel Linki</label>
                        <input type="text" class="from-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn-btn primary">Öne Çıkan Slider Görseli Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
