@model CreateBrandDto

@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Marka Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label> Marka Başlığı</label>
                        <input type="text" class="from-control" asp-for="BrandName" />
                        <br />
                        <label> Marka Görsel</label>
                        <input type="text" class="from-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn-btn primary">Yeni Marka Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


