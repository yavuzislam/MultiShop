@model List<ResultBrandDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Marka Adı</th>
                                <th>Marka Görsel</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.BrandName</th>
                                    <td><img src="@item.ImageUrl" style="width:50p" height="50px;" /></td>
                                    <td><a href="/Admin/Brand/DeleteBrand/@item.BrandID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Brand/UpdateBrand/@item.BrandID" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Brand/CreateBrand" class="btn btn-primary">Yeni Marka Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>
